<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="100dp"
            >
            <TextView
                android:id="@+id/teamName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="火箭"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="联盟"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="得分"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/teamPoint"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0.0"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:id="@+id/teamPointSort"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0.0"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/leaguePoint"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="篮板"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/teamRebs"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/leagueRebs"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="助攻"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/teamAssist"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/leagueAssist"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="抢断"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/teamSteal"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/leagueSteal"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="盖帽"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/teamBlock"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/leagueBlock"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="命中率"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/teamFgp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/leagueFgp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="罚球"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/teamFta"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/leagueFta"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0.0"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
