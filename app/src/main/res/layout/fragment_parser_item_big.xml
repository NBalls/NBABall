<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/yCompany"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#3333AA"
            android:text="Bet365"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/startBRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="1.00"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/startPan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="-1.0"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/startSRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="0.85"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/endBRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="1.12"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/endPan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="-1.0"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/endSRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"
            android:text="0.75"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>

